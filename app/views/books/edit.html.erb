
<div class="container">
  <h1>Editing Book</h1>

  <%= form_with model: @book, url:"/books/#{@book.id}", local: true do |f| %>

   <% @book.errors.full_messages.each do |message| %>
        <li>error <%= message %></li>
      <% end %>
   <p>Title</p>
   <%= f.text_field :title %>
   <p>Body</p>
   <%= f.text_area :body %>
   <%= f.submit 'Update Book' %>
  <% end %>

  <%= link_to "Show", "/books/#{@book.id}" %> | <%= link_to "Back", "/books" %>
</div>
